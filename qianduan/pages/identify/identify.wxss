/* pages/identify/identify.wxss */
.container {
  height: 100vh;
  box-sizing: border-box;
  background-color: black;
  position: relative;
  overflow: hidden;
}

/* Nav Bar */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 44px 16px 10px;
  background: transparent;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  box-sizing: border-box;
}

.back-btn {
  width: 32px;
  height: 32px;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(5px);
}

.icon-nav {
  width: 18px;
  height: 18px;
  filter: brightness(0) invert(1);
}

.capsule {
  width: 87px;
  height: 32px;
  background: rgba(255, 255, 255, 0.2);
  border: 0.5px solid rgba(255, 255, 255, 0.1);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.icon-sm {
  width: 20px;
  height: 20px;
  filter: brightness(0) invert(1);
}

.divider {
  width: 1px;
  height: 16px;
  background-color: rgba(255, 255, 255, 0.3);
}

/* Camera View */
.camera-view {
  width: 100%;
  height: 100%;
  position: relative;
}

.camera-preview {
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

/* Scan Overlay */
.scan-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  pointer-events: none;
}

.scan-box {
  width: 250px;
  height: 250px;
  border: 2px solid rgba(74, 222, 128, 0.5); /* Green 400 */
  border-radius: 16px;
  position: relative;
}

.corner {
  position: absolute;
  width: 16px;
  height: 16px;
  border-color: #22c55e; /* Green 500 */
  border-style: solid;
}

.tl { top: -2px; left: -2px; border-width: 4px 0 0 4px; border-top-left-radius: 4px; }
.tr { top: -2px; right: -2px; border-width: 4px 4px 0 0; border-top-right-radius: 4px; }
.bl { bottom: -2px; left: -2px; border-width: 0 0 4px 4px; border-bottom-left-radius: 4px; }
.br { bottom: -2px; right: -2px; border-width: 0 4px 4px 0; border-bottom-right-radius: 4px; }

.scan-line {
  position: absolute;
  left: 0;
  right: 0;
  height: 2px;
  background-color: rgba(34, 197, 94, 0.8);
  box-shadow: 0 0 10px rgba(34, 197, 94, 0.8);
  animation: scan 2s infinite linear;
}

@keyframes scan {
  0% { top: 0; opacity: 0; }
  10% { opacity: 1; }
  90% { opacity: 1; }
  100% { top: 100%; opacity: 0; }
}

.scan-tip {
  color: white;
  margin-top: 16px;
  font-size: 14px;
  background-color: rgba(0, 0, 0, 0.4);
  padding: 4px 12px;
  border-radius: 9999px;
  backdrop-filter: blur(4px);
}

/* Bottom Controls */
.bottom-controls {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 32px 48px 48px;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.control-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.icon-circle {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.glass {
  background-color: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(5px);
}

.icon-control {
  width: 20px;
  height: 20px;
  filter: brightness(0) invert(1);
}

.control-text {
  font-size: 12px;
  color: white;
}

.shutter-btn {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  border: 4px solid white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shutter-inner {
  width: 64px;
  height: 64px;
  background-color: white;
  border-radius: 50%;
}

/* Result Popup */
.result-popup {
  position: absolute;
  bottom: 128px;
  left: 16px;
  right: 16px;
  background-color: white;
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  transform: translateY(150%);
  opacity: 0;
  transition: all 0.5s ease-out;
}

.result-popup.show {
  transform: translateY(0);
  opacity: 1;
}

.result-content {
  display: flex;
  gap: 12px;
  margin-bottom: 16px;
}

.result-img {
  width: 64px;
  height: 64px;
  border-radius: 8px;
  background-color: #f3f4f6;
}

.result-info {
  flex: 1;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 4px;
}

.result-name {
  font-size: 18px;
  font-weight: bold;
  color: #1f2937;
}

.result-tag {
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 9999px;
  font-weight: bold;
}

.bg-green-100 { background-color: #dcfce7; }
.text-green { color: #15803d; }

.result-points {
  font-size: 14px;
  margin-bottom: 4px;
}

.text-gray { color: #6b7280; }
.text-green-bold { color: #15803d; font-weight: bold; }

.result-tip {
  font-size: 12px;
  color: #9ca3af;
}

.result-actions {
  display: flex;
  gap: 8px;
}

.btn-gray {
  flex: 1;
  background-color: #f3f4f6;
  color: #374151;
  font-size: 14px;
  font-weight: 500;
  border-radius: 8px;
  padding: 8px 0;
  margin: 0;
}

.btn-green {
  flex: 1;
  background-color: #22c55e;
  color: white;
  font-size: 14px;
  font-weight: 500;
  border-radius: 8px;
  padding: 8px 0;
  margin: 0;
}