/** guide.wxss */
.container {
  min-height: 100vh;
  box-sizing: border-box;
}

.bg-white {
  background-color: white;
}

/* Nav Bar */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 44px 16px 10px;
  background: white;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  box-sizing: border-box;
  border-bottom: 1px solid #f3f4f6;
}

.icon-nav {
  width: 24px;
  height: 24px;
}

.nav-title {
  font-size: 18px;
  font-weight: bold;
  color: #1f2937;
}

.capsule {
  width: 87px;
  height: 32px;
  background: rgba(255, 255, 255, 0.6);
  border: 0.5px solid rgba(0, 0, 0, 0.1);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.icon-sm {
  width: 20px;
  height: 20px;
}

.divider {
  width: 1px;
  height: 16px;
  background-color: #ccc;
}

.content-padding {
  padding: 0 16px 24px;
}

/* Search */
.search-area {
  margin-bottom: 24px;
}

.search-box {
  background-color: #f3f4f6;
  border-radius: 9999px;
  padding: 12px 16px;
  display: flex;
  align-items: center;
  position: relative;
}

.icon-search {
  width: 18px;
  height: 18px;
  margin-right: 12px;
  color: #9ca3af;
}

.search-input {
  flex: 1;
  font-size: 14px;
}

/* Main Categories */
.main-categories {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16px;
  margin-bottom: 32px;
}

.cat-card {
  height: 128px;
  border-radius: 16px;
  padding: 16px;
  color: white;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.bg-blue { background-color: #2563eb; }
.bg-red { background-color: #ef4444; }
.bg-green { background-color: #16a34a; }
.bg-gray { background-color: #374151; }

.shadow-blue { box-shadow: 0 10px 15px -3px rgba(37, 99, 235, 0.3); }
.shadow-red { box-shadow: 0 10px 15px -3px rgba(239, 68, 68, 0.3); }
.shadow-green { box-shadow: 0 10px 15px -3px rgba(22, 163, 74, 0.3); }
.shadow-gray { box-shadow: 0 10px 15px -3px rgba(55, 65, 81, 0.3); }

.cat-icon-bg {
  position: absolute;
  right: -8px;
  bottom: -16px;
  width: 64px;
  height: 64px;
  opacity: 0.2;
}

.cat-content {
  position: relative;
  z-index: 10;
}

.cat-title {
  font-size: 18px;
  font-weight: bold;
  display: block;
}

.cat-desc {
  font-size: 12px;
  opacity: 0.9;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Common Queries */
.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 12px;
  display: block;
}

.query-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.query-item {
  background: white;
  border: 1px solid #f3f4f6;
  border-radius: 12px;
  padding: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.query-left {
  display: flex;
  align-items: center;
  gap: 12px;
}

.query-icon-circle {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bg-gray-100 { background-color: #f3f4f6; }

.icon-query {
  width: 20px;
  height: 20px;
  filter: grayscale(100%);
  opacity: 0.6;
}

.red-tint { filter: invert(36%) sepia(93%) saturate(1376%) hue-rotate(338deg) brightness(91%) contrast(96%); opacity: 1; }
.green-tint { filter: invert(48%) sepia(79%) saturate(2476%) hue-rotate(86deg) brightness(118%) contrast(119%); opacity: 1; }

.query-name {
  font-size: 14px;
  color: #374151;
}

.query-tag {
  font-size: 12px;
  padding: 4px 8px;
  border-radius: 4px;
}

.bg-gray-200 { background-color: #e5e7eb; }
.bg-red-100 { background-color: #fee2e2; }
.bg-green-100 { background-color: #dcfce7; }

.text-gray-600 { color: #4b5563; }
.text-red-600 { color: #dc2626; }
.text-green-600 { color: #16a34a; }