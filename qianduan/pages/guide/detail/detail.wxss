/** detail.wxss */
.container {
  min-height: 100vh;
  box-sizing: border-box;
}

.bg-white {
  background-color: white;
}

/* Nav Bar */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 44px 16px 10px;
  background: transparent;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  box-sizing: border-box;
}

.icon-nav {
  width: 24px;
  height: 24px;
  filter: brightness(0) invert(1);
}

.nav-title {
  font-size: 18px;
  font-weight: bold;
}

.text-white {
  color: white;
}

.capsule {
  width: 87px;
  height: 32px;
  background: rgba(255, 255, 255, 0.2);
  border: 0.5px solid rgba(255, 255, 255, 0.3);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.icon-sm {
  width: 20px;
  height: 20px;
  filter: brightness(0) invert(1);
}

.divider {
  width: 1px;
  height: 16px;
  background-color: rgba(255, 255, 255, 0.5);
}

/* Header */
.header-bg {
  height: 260px; /* Taller to accommodate navbar */
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 40px;
  box-sizing: border-box;
}

.bg-blue { background-color: #2563eb; }
.bg-red { background-color: #ef4444; }
.bg-green { background-color: #16a34a; }
.bg-gray { background-color: #374151; }

.header-icon-bg {
  position: absolute;
  width: 120px;
  height: 120px;
  opacity: 0.2;
}

.header-content {
  text-align: center;
  z-index: 10;
  color: white;
}

.header-title {
  font-size: 30px;
  font-weight: bold;
  display: block;
  margin-bottom: 8px;
}

.header-subtitle {
  font-size: 14px;
  opacity: 0.8;
}

/* Content */
.content-box {
  background-color: white;
  border-top-left-radius: 24px;
  border-top-right-radius: 24px;
  margin-top: -24px;
  position: relative;
  z-index: 10;
  padding: 24px;
  min-height: 500px;
}

.section {
  margin-bottom: 32px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 12px;
  padding-left: 8px;
  border-left-width: 4px;
  border-left-style: solid;
}

.border-blue { border-left-color: #3b82f6; }
.border-red { border-left-color: #ef4444; }
.border-green { border-left-color: #22c55e; }
.border-gray { border-left-color: #6b7280; }

.req-list {
  padding: 16px;
  border-radius: 12px;
}

.bg-blue-light { background-color: #eff6ff; }
.bg-red-light { background-color: #fef2f2; }
.bg-green-light { background-color: #f0fdf4; }
.bg-gray-light { background-color: #f3f4f6; }

.req-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 8px;
  font-size: 14px;
  color: #4b5563;
  line-height: 1.5;
}

.dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  margin-top: 8px;
  margin-right: 8px;
  flex-shrink: 0;
}

/* Items Grid */
.items-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16px;
}

.item-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.item-icon-circle {
  width: 56px;
  height: 56px;
  border-radius: 50%;
  background-color: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-icon {
  width: 28px;
  height: 28px;
}

/* Tinting icons via filter - approximate colors */
.tint-blue { filter: invert(36%) sepia(93%) saturate(1376%) hue-rotate(200deg) brightness(91%) contrast(96%); } /* Blue */
.tint-red { filter: invert(36%) sepia(93%) saturate(1376%) hue-rotate(338deg) brightness(91%) contrast(96%); } /* Red */
.tint-green { filter: invert(48%) sepia(79%) saturate(2476%) hue-rotate(86deg) brightness(118%) contrast(119%); } /* Green */
.tint-gray { filter: grayscale(100%) opacity(0.6); }

.item-name {
  font-size: 12px;
  color: #4b5563;
}
