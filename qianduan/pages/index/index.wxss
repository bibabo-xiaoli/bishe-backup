/**index.wxss**/

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 16px;
  padding-right: 16px;
  box-sizing: border-box;
  z-index: 100;
  pointer-events: none; /* Let clicks pass through empty areas */
}

.nav-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  pointer-events: auto;
}

.capsule {
  width: 87px;
  height: 32px;
  background: rgba(255, 255, 255, 0.6);
  border: 0.5px solid rgba(0, 0, 0, 0.1);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: space-around;
  pointer-events: auto;
}

.icon-sm {
  width: 20px;
  height: 20px;
}

.divider {
  width: 1px;
  height: 16px;
  background-color: #ccc;
}

.content {
  height: 100vh;
  box-sizing: border-box;
  padding-bottom: 20px;
}

.section {
  padding: 0 16px;
  margin-bottom: 24px;
}

/* Hero Banner */
.hero-card {
  width: 100%;
  height: 160px;
  border-radius: 16px;
  overflow: hidden;
  position: relative;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.hero-bg {
  width: 100%;
  height: 100%;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, rgba(23, 53, 23, 0.8), transparent);
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 24px;
}

.hero-title {
  color: white;
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 8px;
}

.hero-subtitle {
  color: #D1E0AB;
  font-size: 14px;
}

/* Stats Card */
.stats-card {
  background: white;
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1px solid #f3f4f6;
}

.stats-left {
  flex: 1;
}

.stats-label {
  font-size: 14px;
  color: #6b7280;
  display: block;
}

.stats-value-box {
  display: flex;
  align-items: baseline;
  margin: 4px 0 8px 0;
}

.stats-value {
  font-size: 30px;
  font-weight: bold;
  color: var(--primary-color);
  margin-right: 4px;
}

.stats-unit {
  font-size: 14px;
  color: #6b7280;
}

.stats-badge {
  display: inline-flex;
  align-items: center;
  background-color: #f0fdf4;
  padding: 4px 8px;
  border-radius: 9999px;
  font-size: 12px;
  color: var(--primary-color);
}

.badge-icon {
  width: 14px;
  height: 14px;
  margin-right: 4px;
}

.stats-right {
  margin-left: 16px;
}

.points-circle {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  border: 4px solid #f0fdf4;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.points-label {
  font-size: 10px;
  color: #9ca3af;
}

.points-num {
  font-size: 20px;
  font-weight: bold;
  color: #1f2937;
  margin: 2px 0;
}

.exchange-btn {
  background-color: var(--primary-color);
  color: white;
  font-size: 10px;
  padding: 2px 8px;
  border-radius: 10px;
  display: flex;
  align-items: center;
}

.icon-xs {
  width: 12px;
  height: 12px;
  margin-left: 2px;
}

/* Grid Menu */
.grid-menu {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16px;
}

.grid-item {
  border-radius: 16px;
  padding: 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 128px;
  position: relative;
  overflow: hidden;
}

.bg-blue { background-color: #eff6ff; border: 1px solid #dbeafe; }
.bg-green { background-color: #f0fdf4; border: 1px solid #dcfce7; }
.bg-orange { background-color: #fff7ed; border: 1px solid #ffedd5; }
.bg-purple { background-color: #faf5ff; border: 1px solid #f3e8ff; }

.grid-icon {
  width: 36px;
  height: 36px;
  margin-bottom: 8px;
  z-index: 10;
}

.grid-title {
  font-weight: bold;
  color: #374151;
  font-size: 16px;
  z-index: 10;
}

.grid-desc {
  font-size: 12px;
  color: #6b7280;
  margin-top: 4px;
  z-index: 10;
}

/* Recent Activity */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #1f2937;
}

.section-more {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #9ca3af;
}

.activity-list {
  background: white;
  border-radius: 16px;
  padding: 16px;
  border: 1px solid #f3f4f6;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 8px 0;
}

.activity-icon-box {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.bg-green-light { background-color: #dcfce7; }
.bg-blue-light { background-color: #dbeafe; }

.activity-icon {
  width: 20px;
  height: 20px;
}

.activity-info {
  flex: 1;
}

.activity-name {
  font-size: 14px;
  font-weight: bold;
  color: #1f2937;
  display: block;
}

.activity-time {
  font-size: 12px;
  color: #9ca3af;
}

.activity-points {
  font-weight: bold;
  color: var(--primary-color);
  font-size: 14px;
}

.divider-line {
  height: 1px;
  background-color: #f3f4f6;
  margin: 8px 0;
}
