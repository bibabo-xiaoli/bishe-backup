/** ranking.wxss */
.container {
  min-height: 100vh;
  position: relative;
}

.bg-green-50 {
  background-color: #F7FAEF;
}

/* Nav Bar */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 16px;
  padding-right: 16px;
  box-sizing: border-box;
  z-index: 100;
  background: transparent; /* Overlay on green bg */
}

.icon-nav-white {
  width: 24px;
  height: 24px;
}

.nav-title-white {
  font-size: 18px;
  font-weight: bold;
  color: white;
}

.capsule-white {
  width: 87px;
  height: 32px;
  background: rgba(255, 255, 255, 0.2);
  border: 0.5px solid rgba(255, 255, 255, 0.1);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.divider-white {
  width: 1px;
  height: 16px;
  background-color: rgba(255, 255, 255, 0.3);
}

.icon-sm {
  width: 20px;
  height: 20px;
}

/* Header Area */
.header-bg {
  background-color: #3F7745;
  padding-bottom: 48px;
  border-bottom-left-radius: 40px;
  border-bottom-right-radius: 40px;
  position: relative;
  z-index: 1;
}

.tabs-container {
  display: flex;
  justify-content: center;
  margin-bottom: 24px;
}

.tabs-bg {
  background-color: rgba(0, 0, 0, 0.1);
  padding: 4px;
  border-radius: 9999px;
  display: flex;
}

.tab-item {
  padding: 4px 16px;
  border-radius: 9999px;
  font-size: 12px;
  font-weight: 500;
  color: #D1E0AB;
  transition: all 0.2s;
}

.tab-item.active {
  background-color: white;
  color: #3F7745;
  font-weight: bold;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

/* Podium */
.podium-container {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: 0 16px;
  margin-bottom: -16px; /* Overlap with content */
  gap: 16px;
  position: relative;
  z-index: 10;
}

.podium-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.podium-item.first {
  margin-bottom: -16px; /* Lift higher visually */
  z-index: 2;
}

.avatar-wrapper {
  position: relative;
}

.avatar-img {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  border: 2px solid rgba(255, 255, 255, 0.5);
  padding: 2px;
}

.avatar-wrapper.lg .avatar-img {
  width: 80px;
  height: 80px;
  border: 4px solid #FCD34D;
}

.rank-badge {
  position: absolute;
  bottom: -4px;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 20px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: bold;
  border: 2px solid #3F7745;
}

.rank-badge.bg-gray {
  background-color: #E5E7EB;
  color: #4B5563;
}

.rank-badge.bg-yellow {
  background-color: #FBBF24;
  color: white;
  width: 24px;
  height: 24px;
  bottom: -8px;
}

.rank-badge.bg-orange {
  background-color: #FED7AA;
  color: #C2410C;
}

.crown-wrapper {
  position: relative;
  height: 24px;
  margin-bottom: -10px;
  z-index: 3;
  display: flex;
  justify-content: center;
}

.crown-icon {
  width: 32px;
  height: 32px;
}

.user-name {
  color: white;
  font-size: 12px;
  margin-top: 8px;
  font-weight: 500;
}

.user-name.bold {
  font-size: 14px;
  font-weight: bold;
}

.score {
  color: #D1E0AB;
  font-size: 12px;
}

.score.highlight {
  color: #FDE68A;
  font-weight: bold;
}

/* List */
.ranking-list {
  flex: 1;
  padding: 24px 16px 80px; /* Top padding to clear header overlap */
  margin-top: -16px;
  box-sizing: border-box;
}

.list-container {
  background: white;
  border-radius: 16px;
  padding: 8px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 12px;
  border-radius: 12px;
}

.rank-num {
  width: 32px;
  text-align: center;
  font-weight: bold;
  color: #6B7280;
  font-size: 14px;
}

.rank-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin: 0 12px;
  background-color: #E5E7EB;
}

.rank-info {
  flex: 1;
}

.rank-name {
  font-size: 14px;
  font-weight: bold;
  color: #1F2937;
  display: block;
}

.rank-tag {
  font-size: 10px;
  color: #9CA3AF;
  background-color: #F3F4F6;
  padding: 2px 6px;
  border-radius: 4px;
  margin-top: 2px;
  display: inline-block;
}

.rank-desc {
  font-size: 12px;
  color: #6B7280;
}

.rank-score {
  font-size: 14px;
  font-weight: bold;
  color: #3F7745;
}

/* My Rank Bar */
.my-rank-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: white;
  border-top: 1px solid #F3F4F6;
  padding: 16px 16px calc(16px + env(safe-area-inset-bottom));
  box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.05);
  z-index: 50;
  box-sizing: border-box;
  /* Adjust for TabBar height if needed, assuming custom tab bar covers this or native tab bar sits below */
  bottom: 0; 
}

.my-rank {
  padding: 0; /* Remove padding from rank-item class inside bar */
}

