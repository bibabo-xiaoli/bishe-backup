/** orders.wxss */
.container {
  min-height: 100vh;
  box-sizing: border-box;
}

.bg-gray-50 {
  background-color: #f9fafb;
}

/* Nav Bar */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 44px 16px 10px;
  background: white;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  box-sizing: border-box;
  border-bottom: 1px solid #f3f4f6;
}

.icon-nav {
  width: 24px;
  height: 24px;
}

.nav-title {
  font-size: 18px;
  font-weight: bold;
  color: #1f2937;
}

.capsule {
  width: 87px;
  height: 32px;
  background: rgba(255, 255, 255, 0.6);
  border: 0.5px solid rgba(0, 0, 0, 0.1);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.icon-sm {
  width: 20px;
  height: 20px;
}

.divider {
  width: 1px;
  height: 16px;
  background-color: #ccc;
}

/* Tabs */
.tabs-header {
  display: flex;
  justify-content: space-around;
  background-color: white;
  border-bottom: 1px solid #f3f4f6;
  position: sticky; /* Sticky tabs if not fixed by container padding, but here container padding handles top bar, so sticky works relative to scroll-view? No, sticky works in normal flow. */
  /* Since we use fixed top bar and padding-top on container, this div is just below top bar. */
  z-index: 90;
}

.tab-item {
  padding: 12px 16px;
  font-size: 14px;
  color: #6b7280;
  position: relative;
}

.tab-item.active {
  color: #15803d;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 24px;
  height: 3px;
  background-color: #15803d;
  border-radius: 2px;
}

/* List */
.order-list {
  height: calc(100vh - 100px); /* Adjust based on navbar + tabs height */
}

.content-padding {
  padding: 16px;
}

.order-card {
  background-color: white;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.border-green {
  border: 1px solid #dcfce7;
}

.card-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 12px;
  margin-bottom: 12px;
}

.border-bottom {
  border-bottom: 1px solid #f3f4f6;
}

.order-id, .order-time {
  font-size: 12px;
  color: #6b7280;
}

.status-text {
  font-size: 12px;
  font-weight: 500;
}

.text-orange { color: #f97316; }
.text-green { color: #15803d; }
.text-gray { color: #9ca3af; }
.text-red { color: #ef4444; }

.status-flex {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 12px;
  font-weight: 500;
}

.icon-truck-xs {
  width: 14px;
  height: 14px;
}

.card-content {
  display: flex;
  gap: 12px;
  margin-bottom: 12px;
}

.icon-box {
  width: 64px;
  height: 64px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bg-gray-100 { background-color: #f3f4f6; }

.cat-icon {
  width: 32px;
  height: 32px;
  opacity: 0.6;
}

.info-box {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 14px;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 4px;
}

.info-text {
  font-size: 12px;
  color: #6b7280;
  margin-top: 2px;
}

.text-green-bold {
  color: #15803d;
  font-weight: bold;
}

.text-gray-light {
  color: #9ca3af;
}

/* Actions */
.card-actions {
  display: flex;
  justify-content: flex-end;
  gap: 8px;
}

.action-btn {
  background-color: white;
  border: 1px solid #e5e7eb;
  border-radius: 9999px;
  padding: 6px 16px;
  font-size: 12px;
  color: #4b5563;
  margin: 0;
  line-height: 1.4;
}

.action-btn.bg-green {
  background-color: #15803d;
  border-color: #15803d;
  color: white;
}

.action-btn.border-green {
  border-color: #15803d;
  color: #15803d;
}

.empty-state {
  text-align: center;
  color: #9ca3af;
  font-size: 14px;
  margin-top: 40px;
}
