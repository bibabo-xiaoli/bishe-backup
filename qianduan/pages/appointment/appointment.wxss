/** appointment.wxss */
.container {
  min-height: 100vh;
  box-sizing: border-box;
}

.bg-white {
  background-color: white;
}

/* Nav Bar */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 44px 16px 10px;
  background: white;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  box-sizing: border-box;
  border-bottom: 1px solid #f3f4f6;
}

.icon-nav {
  width: 24px;
  height: 24px;
}

.nav-title {
  font-size: 18px;
  font-weight: bold;
  color: #1f2937;
}

.capsule {
  width: 87px;
  height: 32px;
  background: rgba(255, 255, 255, 0.6);
  border: 0.5px solid rgba(0, 0, 0, 0.1);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.icon-sm {
  width: 20px;
  height: 20px;
}

.divider {
  width: 1px;
  height: 16px;
  background-color: #ccc;
}

/* Progress Steps */
.steps-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24px 32px;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.step-circle {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 4px;
}

.step-circle.active {
  background-color: #3F7745;
  color: white;
}

.step-circle.bg-light-green {
  background-color: #dcfce7;
}

.text-green { color: #3F7745; }

.step-circle.bg-gray {
  background-color: #f3f4f6;
}

.text-gray { color: #9ca3af; }

.step-text {
  font-size: 12px;
  font-weight: 500;
}

.step-text.active {
  color: #3F7745;
}

.step-line {
  flex: 1;
  height: 2px;
  background-color: #f3f4f6;
  margin: 0 8px;
  margin-top: -20px; /* Align with circle center */
}

.step-line.active {
  background-color: #dcfce7;
}

.content-padding {
  padding: 0 16px 24px;
}

.section {
  margin-bottom: 32px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 12px;
}

/* Category Grid */
.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
}

.cat-card {
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  padding: 12px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.cat-card.active {
  border: 2px solid #3F7745;
  background-color: #f0fdf4;
}

.check-badge {
  position: absolute;
  top: 8px;
  right: 8px;
  width: 16px;
  height: 16px;
}

.icon-check {
  width: 16px;
  height: 16px;
}

.cat-icon {
  width: 32px;
  height: 32px;
  margin-bottom: 8px;
}

.cat-name {
  font-size: 14px;
  font-weight: 500;
  color: #4b5563;
}

.cat-card.active .cat-name {
  color: #15803d;
  font-weight: bold;
}

/* Weight Estimation */
.weight-card {
  background-color: #f9fafb;
  border-radius: 12px;
  padding: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.circle-btn {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background-color: white;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
}

.weight-display {
  text-align: center;
}

.weight-val {
  font-size: 24px;
  font-weight: bold;
  color: #1f2937;
}

.weight-unit {
  font-size: 14px;
  color: #6b7280;
  margin-left: 2px;
}

/* Time Selection */
.time-selection {
  background-color: #f9fafb;
  border-radius: 12px;
  overflow: hidden;
}

.time-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #e5e7eb;
}

.time-row:last-child {
  border-bottom: none;
}

.time-label {
  font-size: 14px;
  color: #4b5563;
  font-weight: 500;
}

.time-picker {
  display: flex;
  align-items: center;
  gap: 8px;
}

.time-value {
  font-size: 14px;
  color: #1f2937;
  font-weight: 500;
}

.time-value.placeholder {
  color: #9ca3af;
}

/* Address Card */
.address-card {
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  padding: 16px;
  display: flex;
  align-items: center;
  gap: 12px;
}

.icon-box-orange {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #fff7ed;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-map-pin {
  width: 24px;
  height: 24px;
}

.address-content {
  flex: 1;
}

.addr-row {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 4px;
}

.addr-tag {
  font-size: 12px;
  font-weight: bold;
  color: #1f2937;
}

.addr-contact {
  font-size: 12px;
  color: #6b7280;
}

.addr-text {
  font-size: 14px;
  color: #4b5563;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.icon-arrow {
  width: 16px;
  height: 16px;
  color: #9ca3af;
}

/* Upload */
.upload-row {
  display: flex;
}

.upload-box {
  width: 96px;
  height: 96px;
  background-color: #f9fafb;
  border: 2px dashed #d1d5db;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.icon-camera {
  width: 24px;
  height: 24px;
  margin-bottom: 4px;
  opacity: 0.4;
}

.upload-text {
  font-size: 12px;
  color: #9ca3af;
}

.preview-img {
  width: 100%;
  height: 100%;
}

/* Bottom Bar */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: white;
  border-top: 1px solid #f3f4f6;
  padding: 16px 24px;
  padding-bottom: calc(16px + env(safe-area-inset-bottom));
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  z-index: 50;
  box-shadow: 0 -4px 6px -1px rgba(0, 0, 0, 0.05);
}

.estimate-info {
  display: flex;
  flex-direction: column;
}

.est-label {
  font-size: 12px;
  color: #6b7280;
}

.est-val-box {
  display: flex;
  align-items: baseline;
}

.est-num {
  font-size: 24px;
  font-weight: bold;
  color: #15803d;
}

.est-unit {
  font-size: 12px;
  color: #15803d;
  font-weight: bold;
  margin-left: 2px;
}

.submit-btn {
  background-color: #3F7745;
  color: white;
  font-size: 16px;
  font-weight: bold;
  padding: 12px 32px;
  border-radius: 9999px;
  display: flex;
  align-items: center;
  gap: 8px;
  margin: 0;
  line-height: 1.2;
}

.icon-arrow-white {
  width: 16px;
  height: 16px;
  filter: brightness(0) invert(1);
}
