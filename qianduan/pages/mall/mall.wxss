/** mall.wxss */
.container {
  min-height: 100vh;
  box-sizing: border-box;
}

.bg-gray-50 {
  background-color: #f9fafb;
}

/* Nav Bar */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 44px 16px 10px;
  background: #f9fafb;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  box-sizing: border-box;
}

.icon-nav {
  width: 24px;
  height: 24px;
}

.nav-title {
  font-size: 18px;
  font-weight: bold;
  color: #1f2937;
}

.capsule {
  width: 87px;
  height: 32px;
  background: rgba(255, 255, 255, 0.6);
  border: 0.5px solid rgba(0, 0, 0, 0.1);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.icon-sm {
  width: 20px;
  height: 20px;
}

.divider {
  width: 1px;
  height: 16px;
  background-color: #ccc;
}

/* Header */
.mall-header {
  padding: 24px 16px 16px;
  background-color: white;
  border-bottom-left-radius: 24px;
  border-bottom-right-radius: 24px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.points-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 16px;
}

.points-label {
  font-size: 12px;
  color: #6b7280;
  margin-bottom: 4px;
  display: block;
}

.points-val {
  font-size: 30px;
  font-weight: bold;
  color: #15803d;
}

.history-btn {
  font-size: 12px;
  color: #6b7280;
  background-color: #f3f4f6;
  padding: 4px 8px;
  border-radius: 8px;
  display: flex;
  align-items: center;
}

.icon-xs {
  width: 12px;
  height: 12px;
  margin-left: 2px;
}

/* Categories */
.mall-cats {
  display: flex;
  justify-content: space-between;
  padding: 0 8px;
}

.cat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.cat-icon-circle {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bg-orange-100 { background-color: #ffedd5; }
.bg-blue-100 { background-color: #dbeafe; }
.bg-red-100 { background-color: #fee2e2; }
.bg-purple-100 { background-color: #f3e8ff; }

.cat-icon {
  width: 24px;
  height: 24px;
}

.icon-orange { filter: invert(58%) sepia(61%) saturate(2321%) hue-rotate(346deg) brightness(101%) contrast(97%); }
.icon-blue { filter: invert(36%) sepia(93%) saturate(1376%) hue-rotate(200deg) brightness(91%) contrast(96%); }
.icon-red { filter: invert(36%) sepia(93%) saturate(1376%) hue-rotate(338deg) brightness(91%) contrast(96%); }
.icon-purple { filter: invert(48%) sepia(79%) saturate(2476%) hue-rotate(240deg) brightness(118%) contrast(119%); } /* Approx purple */

.cat-name {
  font-size: 12px;
  color: #4b5563;
}

/* Product Section */
.product-section {
  padding: 16px;
  flex: 1;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 16px;
  display: block;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16px;
}

.product-card {
  background-color: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.product-img {
  width: 100%;
  height: 128px;
  background-color: #e5e7eb;
}

.product-img-placeholder {
  width: 100%;
  height: 128px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bg-green-50 { background-color: #f0fdf4; }

.icon-tree {
  width: 48px;
  height: 48px;
  filter: invert(48%) sepia(79%) saturate(2476%) hue-rotate(86deg) brightness(118%) contrast(119%); /* Green */
}

.product-info {
  padding: 12px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-name {
  font-size: 14px;
  font-weight: bold;
  color: #1f2937;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 8px;
}

.product-bottom {
  margin-top: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-box {
  display: flex;
  align-items: baseline;
}

.price-val {
  font-size: 14px;
  font-weight: bold;
  color: #15803d;
}

.price-unit {
  font-size: 10px;
  font-weight: normal;
  color: #15803d;
  margin-left: 1px;
}

.exchange-btn {
  background-color: #15803d;
  color: white;
  font-size: 10px;
  padding: 4px 8px;
  border-radius: 9999px;
  margin: 0;
  line-height: 1.2;
}