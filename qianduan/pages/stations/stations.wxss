/* pages/stations/stations.wxss */
.container {
  min-height: 100vh;
  box-sizing: border-box;
}

.bg-white {
  background-color: white;
}

/* Nav Bar */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 44px 16px 10px;
  background: white;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  box-sizing: border-box;
}

.icon-nav {
  width: 24px;
  height: 24px;
}

.nav-title {
  font-size: 18px;
  font-weight: bold;
  color: #1f2937;
}

.capsule {
  width: 87px;
  height: 32px;
  background: rgba(255, 255, 255, 0.6);
  border: 0.5px solid rgba(0, 0, 0, 0.1);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.icon-sm {
  width: 20px;
  height: 20px;
}

.divider {
  width: 1px;
  height: 16px;
  background-color: #ccc;
}

/* Map Area */
.map-area {
  height: 50vh;
  width: 100%;
  background-color: #f3f4f6;
  position: relative;
}

.map-img {
  width: 100%;
  height: 100%;
  opacity: 0.5;
  filter: grayscale(100%);
}

.my-location {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 32px;
  height: 32px;
  background-color: #3F7745;
  border: 4px solid white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.icon-house-white {
  width: 16px;
  height: 16px;
  filter: brightness(0) invert(1);
}

/* Map Pins */
.map-pin {
  position: absolute;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pin-circle {
  width: 40px;
  height: 40px;
  background-color: #f97316; /* Orange */
  border: 4px solid white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  z-index: 2;
}

.icon-recycle-white {
  width: 24px;
  height: 24px;
  filter: brightness(0) invert(1);
}

.pin-triangle {
  width: 12px;
  height: 12px;
  background-color: white;
  transform: rotate(45deg);
  margin-top: -6px;
  z-index: 1;
}

/* List Area */
.list-area {
  height: 50vh;
  background-color: white;
  border-top-left-radius: 24px;
  border-top-right-radius: 24px;
  margin-top: -24px; /* Overlap map */
  position: relative;
  z-index: 10;
  box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.drag-handle-bar {
  padding: 16px 0 8px;
  display: flex;
  justify-content: center;
}

.drag-handle {
  width: 48px;
  height: 4px;
  background-color: #e5e7eb;
  border-radius: 9999px;
}

.list-header {
  padding: 0 24px 8px;
}

.list-title {
  font-size: 18px;
  font-weight: bold;
  color: #1f2937;
}

.station-list {
  flex: 1;
  padding: 0 16px;
  box-sizing: border-box;
}

.station-card {
  border: 1px solid #f3f4f6;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  display: flex;
  align-items: center;
  gap: 16px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.station-icon-box {
  width: 64px;
  height: 64px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bg-orange { background-color: #fff7ed; }
.bg-green { background-color: #f0fdf4; }

.station-icon {
  width: 32px;
  height: 32px;
}

.icon-orange {
  /* Ideally use CSS filter for color, or specific colored icon */
  filter: invert(58%) sepia(61%) saturate(2321%) hue-rotate(346deg) brightness(101%) contrast(97%); /* Orange approx */
}

.icon-green {
  filter: invert(48%) sepia(79%) saturate(2476%) hue-rotate(86deg) brightness(118%) contrast(119%); /* Green approx */
}

.station-info {
  flex: 1;
  overflow: hidden;
}

.station-name {
  font-size: 16px;
  font-weight: bold;
  color: #1f2937;
  display: block;
  margin-bottom: 4px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.station-addr {
  font-size: 12px;
  color: #6b7280;
  display: block;
  margin-bottom: 8px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.station-tags {
  display: flex;
  align-items: center;
  gap: 8px;
}

.tag {
  font-size: 10px;
  padding: 2px 8px;
  border-radius: 4px;
}

.bg-green-light { background-color: #dcfce7; }
.bg-gray-light { background-color: #f3f4f6; }

.distance {
  font-size: 10px;
  color: #9ca3af;
}

.nav-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.nav-icon-circle {
  width: 32px;
  height: 32px;
  background-color: #3b82f6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 6px rgba(59, 130, 246, 0.3);
}

.icon-arrow-nav {
  width: 14px;
  height: 14px;
  filter: brightness(0) invert(1);
}

.nav-text {
  font-size: 10px;
  color: #6b7280;
}